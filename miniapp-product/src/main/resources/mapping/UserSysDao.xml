<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.huiounet.miniappproduct.dao.UserSysDao">

    <select id="findById" resultType="cn.huiounet.miniapppojo.pojo.UserSysPojo">
        SELECT * FROM  huiou_user_sys where id = #{id};
    </select>

    <select id="findByOpenId" resultType="cn.huiounet.miniapppojo.pojo.UserSysPojo">
        SELECT * FROM  huiou_user_sys where open_id = #{open_id};
    </select>
</mapper>